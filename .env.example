# u-mem0 Environment Configuration
# Copy this file to .env and update with your values

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Required Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# User identifier (will create a default app of this name also)
USER=USERNAME

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Neo4j Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

NEO4J_URL=neo4j://neo4j:7687
NEO4J_USER=neo4j
# NEO4J_PASSWORD=changeme  # CHANGE THIS IN PRODUCTION
# if ommitted, defaults to 'password' when neo4j first instantiates


# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Frontend Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# API URL for frontend to connect to backend
NEXT_PUBLIC_API_URL=http://localhost:8765

# Optional: HTTP URL if using different protocol
# NEXT_PUBLIC_API_URL_HTTP=http://localhost:8765

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Optional: Database Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# SQLite (default)
DATABASE_URL=sqlite:///data/openmemory.db

# Or PostgreSQL (if using external database)
# DATABASE_URL=postgresql://user:password@localhost:5432/umem0

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Optional: Vector Store Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

QDRANT_URL=http://mem0_store:6333

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Optional: LLM Provider Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 
# At least ONE LLM provider is required for memory processing.
# If not set, the service will start but memory creation will fail.
# Memory categorization also requires OPENAI_API_KEY.
#
# You can configure alternative providers via the /config API endpoint.
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# OpenAI (recommended for memory categorization)
# OPENAI_API_KEY=sk-...

# Anthropic Claude
# ANTHROPIC_API_KEY=sk-ant-...

# Together AI
# TOGETHER_API_KEY=...

# Or use a local LLM via Ollama (configure via /config API)
# OLLAMA_BASE_URL=http://localhost:11434

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Optional: Logging & Monitoring
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# LOG_LEVEL=INFO
# SENTRY_DSN=https://...
