# u-mem0 Environment Configuration Template
# Copy this file to .env and update with your values

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Required Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# User identifier (creates default user and app)
USER=your-username

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Backend API Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Database (defaults to SQLite in /data volume)
DATABASE_URL=sqlite:///data/openmemory.db

# Neo4j Graph Database
# Use bolt:// for single instance (neo4j:// is for clustered routing)
NEO4J_URL=bolt://neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=changeme  # CHANGE THIS IN PRODUCTION
NEO4J_DB=neo4j

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# LLM Provider (required for memory features)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# OpenAI (also enables automatic memory categorization)
OPENAI_API_KEY=sk-...

# Optional: Custom OpenAI endpoint (for proxies or alternative providers)
# OPENAI_BASE_URL=https://api.openai.com/v1

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Frontend Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# API endpoint for browser to connect to backend
NEXT_PUBLIC_API_URL=http://localhost:8765

# User ID displayed in frontend (should match USER above)
NEXT_PUBLIC_USER_ID=your-username

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Optional: Vector Store (Qdrant) Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Only needed if using remote/cloud Qdrant (not local Docker)

# QDRANT_HOST=qdrant.example.com
# QDRANT_PORT=6333
# QDRANT_API_KEY=your-api-key
